{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src/.",
    "paths": {
      "tests": ["tests/*"],
      "@assets": ["assets/index.ts"],
      "@assets/*": ["assets/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@commonSlices/*": ["commonSlices/*"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@navigation/*": ["navigation/*"],
      "@utils/*": ["utils/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
